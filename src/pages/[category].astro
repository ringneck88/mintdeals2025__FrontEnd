import Layout from '../layouts/Layout.astro';

// Disabled prerender to use SSR for dynamic content
export const prerender = false;

const { category } = Astro.params;
const API_BASE = 'https://mintdealsbackend-production.up.railway.app/api';

// Function to minimally clean HTML from Strapi - preserve most formatting
function cleanStrapiHTML(html: string): string {
  if (!html) return '';

  let cleaned = html;

  // Remove non-breaking spaces that cause issues
  cleaned = cleaned.replace(/&nbsp;/gi, ' ');

  // Remove empty paragraphs
  cleaned = cleaned.replace(/<p[^>]*>\s*<\/p>/gi, '');

  // Remove paragraphs that only contain whitespace
  cleaned = cleaned.replace(/<p[^>]*>\s+<\/p>/gi, '');

  return cleaned.trim();
}

// Fetch category details
let categoryName = category.replace('-', ' ').replace(/\b\w/g, (l: string) => l.toUpperCase());
let categoryDescription = '';
let categoryImage = null;
let categoryRichText = '';
let seoTitle = '';
let seoDescription = '';

try {
  const response = await fetch(`${API_BASE}/categories?filters[slug][$eq]=${category}&populate=*`);
  if (response.ok) {
    const data = await response.json();
    if (data?.data?.[0]) {
      const cat = data.data[0];
      const catData = cat.attributes || cat;

      categoryName = catData.Name || catData.name || categoryName;
      categoryDescription = catData.Description || catData.description || catData.Discription || '';
      const rawRichText = catData.RichText || catData.richText || catData.rich_text || '';
      categoryRichText = cleanStrapiHTML(rawRichText);

      // Get SEO fields
      const seoData = catData.seo || catData.SEO || catData.Seo;
      seoTitle = seoData?.metaTitle || seoData?.title || seoData?.MetaTitle || '';
      seoDescription = seoData?.metaDescription || seoData?.description || seoData?.MetaDescription || '';

      console.log('Category details:', { categoryName, hasRichText: !!categoryRichText, seoTitle, seoDescription });
      console.log('Raw RichText sample:', rawRichText?.substring(0, 500));

      // Try to get image
      const imageData = catData.Image || catData.image;
      if (imageData?.url) {
        categoryImage = imageData.url.startsWith('http') ? imageData.url : `${API_BASE}${imageData.url}`;
      } else if (imageData?.data?.attributes?.url) {
        const url = imageData.data.attributes.url;
        categoryImage = url.startsWith('http') ? url : `${API_BASE}${url}`;
      }
    }
  }
} catch (error) {
  console.error('Error fetching category details:', error);
}

// Fetch products for this category
let products: any[] = [];
try {
  const response = await fetch(`${API_BASE}/products?filters[category][slug][$eq]=${category}&populate=*&pagination[pageSize]=50`);
  if (response.ok) {
    const data = await response.json();
    products = data?.data || [];
  }
} catch (error) {
  console.error('Error fetching products:', error);
}

