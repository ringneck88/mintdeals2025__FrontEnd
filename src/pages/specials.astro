          <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
            {specialProducts.map(product => {
              const bestVariant = product.variants?.find(v => v.specialPriceRec) || product.variants?.[0];
