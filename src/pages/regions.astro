                        class="block p-4 transition-all bg-gray-900 border-2 border-green-700 rounded-lg hover:shadow-lg hover:shadow-yellow-400/20 hover:border-yellow-400 cursor-pointer"
                        style="border-image: linear-gradient(to right, rgb(251, 191, 36), rgb(249, 115, 22)) 1;"
                      >
                        <div class="flex items-center justify-between mb-2">
                          <h3 class="text-lg font-semibold text-white">{city.name}</h3>
                          <span class="text-sm text-gray-400">
                            {city.locations.length} location{city.locations.length !== 1 ? 's' : ''}
                          </span>
