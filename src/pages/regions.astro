                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>

                {/* Cities Grid */}
                <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                  {region.cities.map(city => {
                    const citySlug = city.name.toLowerCase().replace(/\s+/g, '-');
                    return (
                      <a
