<script>
  // Sort Regions by Distance from User Location
  function sortRegionsByLocation() {
    console.log('üîÑ Starting region sorting function...');

    const regionsContainer = document.getElementById('regions-container');
    if (!regionsContainer) {
      console.error('‚ùå regions-container element not found');
      return;
    }

    const regionCards = Array.from(regionsContainer.querySelectorAll('.region-card'));
    console.log(`üìç Found ${regionCards.length} region cards`);

    if (regionCards.length === 0) {
      console.error('‚ùå No region cards found');
      return;
    }

    // Haversine formula to calculate distance between two points
    function calculateDistance(lat1, lon1, lat2, lon2) {
      const R = 3959; // Earth's radius in miles
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLon = (lon2 - lon1) * Math.PI / 180;
      const a =
        Math.sin(dLat / 2) * Math.sin(dLat / 2) +
        Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
        Math.sin(dLon / 2) * Math.sin(dLon / 2);
      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
      return R * c;
    }

    // Format distance for display
    function formatDistance(miles) {
      if (miles < 1) {
        return `${(miles * 5280).toFixed(0)} ft`;
      } else if (miles < 10) {
        return `${miles.toFixed(1)} mi`;
      } else {
        return `${Math.round(miles)} mi`;
      }
    }

    // Sort regions by distance and show distance badges
    function sortByDistance(userLat, userLng) {
      console.log('Sorting regions from location:', userLat, userLng);

      const sortedCards = regionCards
        .map(card => {
          const lat = parseFloat(card.dataset.lat);
          const lng = parseFloat(card.dataset.lng);
          const regionName = card.dataset.name;
          const distance = (lat && lng && !isNaN(lat) && !isNaN(lng)) ? calculateDistance(userLat, userLng, lat, lng) : Infinity;

          if (distance === Infinity) {
            console.warn(`‚ö†Ô∏è Region: ${regionName} - Missing or invalid coordinates (Lat: ${lat}, Lng: ${lng})`);
          } else {
            console.log(`‚úì Region: ${regionName}, Distance: ${distance.toFixed(2)} mi`);
          }

          // Update distance badge
          const badge = card.querySelector('.distance-badge');
          if (badge && distance !== Infinity) {
            badge.textContent = formatDistance(distance);
            badge.classList.remove('hidden');

            // Color code based on distance
            if (distance < 100) {
              badge.className = 'distance-badge bg-green-600 text-white text-sm font-bold px-3 py-1 rounded-full shadow-lg';
            } else if (distance < 500) {
              badge.className = 'distance-badge bg-yellow-500 text-white text-sm font-bold px-3 py-1 rounded-full shadow-lg';
            } else {
              badge.className = 'distance-badge bg-gray-600 text-white text-sm font-bold px-3 py-1 rounded-full shadow-lg';
            }
          }

          return { card, distance, regionName };
        })
        .sort((a, b) => a.distance - b.distance);

      console.log('Sorted order:', sortedCards.map(s => `${s.regionName}: ${s.distance.toFixed(2)} mi`));

      // Create a document fragment for better performance
      const fragment = document.createDocumentFragment();
      sortedCards.forEach(({ card }) => {
        fragment.appendChild(card);
      });

      // Clear the container and append all sorted cards at once
      regionsContainer.innerHTML = '';
      regionsContainer.appendChild(fragment);

      console.log('‚úÖ DOM updated with sorted regions');
      console.log('‚úÖ Sorted regions by your location');
    }

    // Sort alphabetically if no geolocation
    function sortAlphabetically() {
      console.log('Sorting regions alphabetically');

      const sortedCards = regionCards
        .sort((a, b) => {
          const nameA = a.dataset.name || '';
          const nameB = b.dataset.name || '';
          return nameA.localeCompare(nameB);
        });

      console.log('Alphabetical order:', sortedCards.map(card => card.dataset.name));

      // Create a document fragment
      const fragment = document.createDocumentFragment();
      sortedCards.forEach(card => {
        fragment.appendChild(card);
      });

      // Clear and re-append
      regionsContainer.innerHTML = '';
      regionsContainer.appendChild(fragment);

      console.log('‚úÖ Sorted regions alphabetically');
    }

    // Try to get user's geolocation
    if ('geolocation' in navigator) {
      navigator.geolocation.getCurrentPosition(
        (position) => {
          // Use user's current location
          sortByDistance(position.coords.latitude, position.coords.longitude);
        },
        (error) => {
          // If location denied or error, sort alphabetically
          console.log('Geolocation not available, sorting alphabetically');
          sortAlphabetically();
        },
        {
          timeout: 5000,
          enableHighAccuracy: true
        }
      );
    } else {
      // If geolocation not supported, sort alphabetically
      console.log('Geolocation not supported, sorting alphabetically');
      sortAlphabetically();
    }
  }

  document.addEventListener('DOMContentLoaded', sortRegionsByLocation);
  document.addEventListener('astro:page-load', sortRegionsByLocation);
