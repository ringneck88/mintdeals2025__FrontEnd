                    {storeEmail}
                  </a>
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- Store Hours - Compact Right Column -->
        {store?.hours && store.hours.length > 0 && (
          <div class="lg:col-span-1">
            <div class="sticky top-4">
              <h3 class="text-lg font-bold flex items-center text-white mb-3 uppercase">
                <svg class="w-5 h-5 mr-2 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Hours
              </h3>
              <div id="countdown-timer" class="text-base text-mint-green mb-3"></div>
              <div class="space-y-1" id="store-hours-list">
                {store.hours.map((hour: any) => {
                  const dayName = hour.dayOfWeek
                    ? hour.dayOfWeek.charAt(0).toUpperCase() + hour.dayOfWeek.slice(1, 3).toLowerCase()
                    : 'Day';

                  // Format time to 12-hour format with single letter (09:00:00 -> 9:00A, 21:00:00 -> 9:00P)
                  const formatTime = (time: string) => {
                    if (!time) return '';

                    // Check if already in 12-hour format with AM/PM
                    if (/AM|PM/i.test(time)) {
                      return time.replace(/\s*AM/i, 'A').replace(/\s*PM/i, 'P');
                    }

                    // Parse 24-hour format (09:00:00 or 09:00)
                    const match = time.match(/^(\d{1,2}):(\d{2})/);
                    if (!match) return time;

                    let hours = parseInt(match[1]);
                    const minutes = match[2];
                    const period = hours >= 12 ? 'P' : 'A';

                    // Convert to 12-hour format
                    if (hours === 0) hours = 12;
                    else if (hours > 12) hours -= 12;

                    return `${hours}:${minutes}${period}`;
                  };

                  const openTime = formatTime(hour.openTime || '');
                  const closeTime = formatTime(hour.closeTime || '');

                  return (
                    <div
                      class="hour-row flex justify-between text-base py-1 transition-colors"
                      data-day={hour.dayOfWeek?.toLowerCase()}
                    >
                      <span class="day-name font-medium text-mint-green">
                        {dayName}
                        <span class="today-label ml-1 text-sm hidden"></span>
                      </span>
                      <span class="time-display" style="color: #b8e6d5;">
                        {hour.is_24hour ? '24hrs' : hour.isClosed ? 'Closed' : `${openTime}-${closeTime}`}
                      </span>
                    </div>
                  );
                })}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

