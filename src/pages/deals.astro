---
export const prerender = true;

import Layout from '../layouts/Layout.astro';

// API Configuration
const DISCOUNTS_API_URL = 'https://zealous-adaptation-production-ee61.up.railway.app/api/products/discounts';
const API_BASE = 'https://mintdealsbackend-production.up.railway.app/api';

// Initialize data
let discountProducts = [];
let stores = [];
let storeInfo = null;
let apiError = null;

// Helper function to get discount badge info
function getDiscountBadge(discount) {
  if (!discount) return { text: 'Special', color: 'from-yellow-500 to-orange-500' };

  if (discount.discountType === 'Percent') {
    return {
      text: `${discount.discountAmount}% OFF`,
      color: 'from-green-500 to-emerald-500'
    };
  } else if (discount.discountType === 'Price To Amount - Total Amount' || discount.discountType === 'Price To Amount') {
    return {
      text: `$${discount.discountAmount.toFixed(2)}`,
      color: 'from-yellow-500 to-orange-500'
    };
  }

  return { text: 'Special Deal', color: 'from-purple-500 to-pink-500' };
}

// Helper function to format date
function formatDate(dateString) {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

// Fetch stores with location data
try {
  console.log('üöÄ Fetching stores from API');

  const storesResponse = await fetch(`${API_BASE}/stores?populate=*&pagination[pageSize]=100`);

  if (storesResponse.ok) {
    const data = await storesResponse.json();
    const storesData = data?.data || [];

    stores = storesData.map(store => {
      // Extract coordinates from geo field
      let latitude = null;
      let longitude = null;

      if (store.geo) {
        if (typeof store.geo === 'object') {
          latitude = store.geo.lat || store.geo.latitude || null;
          longitude = store.geo.lng || store.geo.lon || store.geo.longitude || null;
        } else if (typeof store.geo === 'string') {
          try {
            const geoObj = JSON.parse(store.geo);
            latitude = geoObj.lat || geoObj.latitude || null;
            longitude = geoObj.lng || geoObj.lon || geoObj.longitude || null;
          } catch (e) {
            console.error('Failed to parse geo string for store:', store.name);
          }
        }
      }

      return {
        id: store.id,
        documentId: store.documentId,
        name: store.name || 'Unnamed Store',
        slug: store.slug || store.documentId,
        address: store.address || {},
        phone: store.phone,
        latitude: latitude,
        longitude: longitude,
        isActive: store.is_active !== false
      };
    }).filter(store => store.isActive && store.latitude && store.longitude);

    console.log(`‚úÖ Loaded ${stores.length} stores with coordinates`);
  }
} catch (error) {
  console.error('‚ùå Error fetching stores:', error);
}

// Fetch discount products
try {
  console.log('üöÄ Fetching discount products from API');

  const response = await fetch(DISCOUNTS_API_URL);

  if (response.ok) {
    const data = await response.json();

    discountProducts = data.data || [];
    storeInfo = {
      count: data.count || discountProducts.length,
      name: 'Mint Cannabis 75th Ave Phoenix', // Default store name from API
      storeId: 2 // Store ID from API
    };

    console.log(`‚úÖ Loaded ${discountProducts.length} products with discounts`);
  } else {
    const errorData = await response.text();
    console.error('‚ùå Discounts API Error:', errorData);
    apiError = 'Failed to fetch discount products';
  }
} catch (error) {
  console.error('‚ùå Error fetching discounts:', error);
  apiError = error.message;
}
