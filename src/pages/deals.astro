// Temporarily disable prerendering for development
// export const prerender = true;

import Layout from '../layouts/Layout.astro';

// API Configuration
const API_BASE = 'https://mintdealsbackend-production.up.railway.app/api';

// Initialize data
let deals = [];
let stores = [];
let apiError = null;

// Helper function to get discount badge info
function getDiscountBadge(discount) {
  if (!discount || !discount.discountName) {
    return { text: 'Special Deal', color: 'from-yellow-500 to-orange-500' };
  }

  return {
    text: discount.discountName,
    color: 'from-red-600 to-red-700'
  };
}

// Helper function to format date
function formatDate(dateString) {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

// Fetch stores with location data
try {
  console.log('üöÄ Fetching stores from API');

  const storesResponse = await fetch(`${API_BASE}/stores?populate=*&pagination[pageSize]=100`);

  if (storesResponse.ok) {
    const data = await storesResponse.json();
    const storesData = data?.data || [];

    stores = storesData.map(store => {
      // Extract coordinates from geo field
      let latitude = null;
      let longitude = null;

      if (store.geo) {
        if (typeof store.geo === 'object') {
          latitude = store.geo.lat || store.geo.latitude || null;
          longitude = store.geo.lng || store.geo.lon || store.geo.longitude || null;
        } else if (typeof store.geo === 'string') {
          try {
            const geoObj = JSON.parse(store.geo);
            latitude = geoObj.lat || geoObj.latitude || null;
            longitude = geoObj.lng || geoObj.lon || geoObj.longitude || null;
          } catch (e) {
            console.error('Failed to parse geo string for store:', store.name);
          }
        }
      }

      return {
        id: store.id,
        documentId: store.documentId,
        name: store.name || 'Unnamed Store',
        slug: store.slug || store.documentId,
        address: store.address || {},
        phone: store.phone,
        latitude: latitude,
        longitude: longitude,
        isActive: store.is_active !== false
      };
    }).filter(store => store.isActive);

    console.log(`‚úÖ Loaded ${stores.length} stores`);
  }
} catch (error) {
  console.error('‚ùå Error fetching stores:', error);
}

// Fetch discounts, inventory, and build deals
let dealsByStore = {};

try {
  console.log('üöÄ Fetching discounts, inventory, and products from API');

  // Fetch active discounts (try without populate first)
  const discountsResponse = await fetch(
    `${API_BASE}/discounts?filters[isActive][$eq]=true&pagination[pageSize]=1000`
  );

  // Fetch inventory with quantity > 0
  const inventoryResponse = await fetch(
    `${API_BASE}/inventories?filters[quantityAvailable][$gt]=0&pagination[pageSize]=5000`
  );

  if (!discountsResponse.ok) {
    console.error(`‚ùå Discounts API returned ${discountsResponse.status}: ${discountsResponse.statusText}`);
    throw new Error(`Failed to fetch discounts: ${discountsResponse.status}`);
  }

  if (!inventoryResponse.ok) {
    console.error(`‚ùå Inventory API returned ${inventoryResponse.status}: ${inventoryResponse.statusText}`);
    throw new Error(`Failed to fetch inventory: ${inventoryResponse.status}`);
  }

  const discountsData = await discountsResponse.json();
  const inventoryData = await inventoryResponse.json();

  const discounts = discountsData.data || [];
  const inventory = inventoryData.data || [];

  console.log(`üìä Fetched ${discounts.length} active discounts and ${inventory.length} inventory items`);

  // Create inventory lookup by productId
  const inventoryByProductId = {};
  inventory.forEach(item => {
    const productId = item.productId;
    if (productId) {
      if (!inventoryByProductId[productId]) {
        inventoryByProductId[productId] = [];
      }
      inventoryByProductId[productId].push(item);
    }
  });

  // TEMPORARY: Show all inventory as potential deals while setting up discount relationships
  // Later this will be replaced with discount-inventory matching logic

  console.log('üì¶ Building deals from inventory (temporary mode)');

  inventory.forEach(invItem => {
    // Skip items without store assignment
    const storeId = invItem.storeId || 'no-store';
    const storeName = invItem.storeName || 'Store TBD';

    // Find matching store
    let matchingStore = stores.find(s => String(s.id) === String(storeId));

    // Create store group if it doesn't exist
    if (!dealsByStore[storeId]) {
      dealsByStore[storeId] = {
        storeId: storeId,
        storeName: storeName,
        store: matchingStore || { id: storeId, name: storeName, address: {} },
        deals: []
      };
    }

    // Create deal object from inventory
    const deal = {
      // Discount info (will be null for now)
      discountId: null,
      discountName: 'Special Pricing',
      discountAmount: null,
      discountType: null,
      validFrom: null,
      validUntil: null,

      // Product/Inventory info
      productId: invItem.productId,
      productName: invItem.productName,
      brandName: invItem.brandName,
      category: invItem.category,
      unitPrice: invItem.unitPrice,
      quantityAvailable: invItem.quantityAvailable,
      sku: invItem.sku,

      // For display
      imageUrl: null, // Will need to add product images later
    };

    dealsByStore[storeId].deals.push(deal);
  });

  // TODO: Replace above with proper discount-inventory matching when products are populated:
  // discounts.forEach(discount => {
  //   if (!discount.products || !Array.isArray(discount.products) || discount.products.length === 0) {
  //     return;
  //   }
  //   discount.products.forEach(productId => {
  //     const productInventory = inventoryByProductId[productId];
  //     if (!productInventory || productInventory.length === 0) return;
  //     // ... matching logic
  //   });
  // });

  const storeCount = Object.keys(dealsByStore).length;
  const totalDeals = Object.values(dealsByStore).reduce((sum, store) => sum + store.deals.length, 0);

  console.log(`‚úÖ Built ${totalDeals} deals across ${storeCount} stores`);
  Object.values(dealsByStore).forEach(store => {
    console.log(`   üìç ${store.storeName}: ${store.deals.length} deals`);
  });

} catch (error) {
  console.error('‚ùå Error building deals:', error);
  apiError = error.message;
}
