<Layout title="Deals & Specials - Cannabis Dispensary Promotions | Mint Deals" description="Discover the best cannabis deals and specials. Save on premium cannabis products at Mint Cannabis dispensaries.">
  <!-- Video Background -->
  <div class="video-background">
    <video autoplay loop muted playsinline>
      <source src="https://video.wixstatic.com/video/d47472_58cce06729c54ccb935886c4b3647274/1080p/mp4/file.mp4" type="video/mp4">
    </video>
  </div>

  <!-- Content Wrapper -->
  <div class="content-wrapper">
    <!-- Hero Section -->
    <div class="text-white hero-section relative">
      <div class="px-8 mx-auto sm:px-12 lg:px-16 xl:px-20 max-w-[90%] relative z-10">
        <!-- Breadcrumb -->
        <nav class="mb-6 text-sm">
          <div class="flex items-center justify-center space-x-2">
            <a href="/" class="text-yellow-400 hover:text-yellow-300 transition-colors">Home</a>
            <span class="text-green-300">/</span>
            <span class="text-white">Deals</span>
          </div>
        </nav>

        <div class="text-center">
          <h1 class="mb-4 text-4xl font-bold md:text-6xl drop-shadow-2xl text-white uppercase" style="text-shadow: 0 4px 8px rgba(0, 0, 0, 0.8), 0 2px 4px rgba(0, 0, 0, 0.9);">
            DEALS & SPECIALS
          </h1>
          <p class="max-w-2xl mx-auto mb-6 text-lg text-yellow-400 md:text-xl drop-shadow-lg">
            Discover the best cannabis deals and save on premium products
          </p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="py-16">
      <div class="px-8 mx-auto sm:px-12 lg:px-16 xl:px-20 max-w-full">

        {apiError ? (
          <div class="py-12 text-center">
            <div class="max-w-md p-8 mx-auto bg-red-900 rounded-lg bg-opacity-80">
              <div class="mb-4 text-6xl text-red-400">‚ö†Ô∏è</div>
              <h3 class="mb-2 text-lg font-medium text-red-200">API Error</h3>
              <p class="text-sm text-red-300">{apiError}</p>
              <div class="mt-6">
                <a
                  href="/stores"
                  class="text-yellow-400 font-semibold hover:text-yellow-300 transition-colors"
                >
                  Browse Locations ‚Üí
                </a>
              </div>
            </div>
          </div>
        ) : Object.keys(dealsByStore).length === 0 ? (
          <div class="text-center py-16">
            <div class="max-w-md p-8 mx-auto bg-black rounded-lg">
              <div class="mb-4 text-6xl">üí∏</div>
              <h3 class="mt-2 text-lg font-medium text-yellow-400">
                No deals available right now
              </h3>
              <p class="mt-2 text-sm text-green-300">
                Check back soon for amazing deals and specials!
              </p>
              <div class="mt-6">
                <a
                  href="/stores"
                  class="text-yellow-400 font-semibold hover:text-yellow-300 transition-colors"
                >
                  Browse Locations ‚Üí
                </a>
              </div>
            </div>
          </div>
        ) : (
          <div id="stores-container" class="space-y-6">
            {/* Loop through each store and display its deals */}
            {Object.values(dealsByStore).map((storeGroup) => (
              <div class="py-8 px-4 store-section" data-store-id={storeGroup.storeId} style="background-color: rgba(0, 0, 0, 0.95); margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); width: 100vw;">
                <div class="px-8 mx-auto sm:px-12 lg:px-16 xl:px-20 max-w-full">
                  {/* Store Header */}
                  <div class="mb-6 p-6 rounded-lg" style="background-color: rgba(50, 50, 50, 0.1);">
                  <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                      <h2 class="text-2xl md:text-3xl font-bold text-white mb-2 uppercase">
                        {storeGroup.storeName}
                      </h2>
                      {storeGroup.store?.address && (
                        <p class="text-green-300 flex items-center gap-2">
                          <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          </svg>
                          {(storeGroup.store.address.city && storeGroup.store.address.state)
                            ? `${storeGroup.store.address.city}, ${storeGroup.store.address.state}`
                            : 'Location Available'}
                        </p>
                      )}
                    </div>
                    <div class="flex items-center gap-3">
                      <span class="px-4 py-2 bg-yellow-400/20 rounded-full text-sm font-bold text-yellow-400">
                        {Math.min(storeGroup.deals.length, 8)} Deals
                      </span>
                      {storeGroup.store?.slug && (
                        <a
                          href={`/location/${storeGroup.store.slug}`}
                          class="text-yellow-400 font-semibold hover:text-yellow-300 transition-colors text-sm"
                        >
                          Store Info ‚Üí
                        </a>
                      )}
                    </div>
                  </div>
                </div>

                {/* Deals Grid for this store */}
                <div class="products-grid grid grid-cols-2 md:grid-cols-4 gap-6">
                  {[...storeGroup.deals]
                    .sort((a, b) => {
                      // Sort by end date - soonest first
                      const aDate = a.validUntil ? new Date(a.validUntil) : new Date('9999-12-31');
                      const bDate = b.validUntil ? new Date(b.validUntil) : new Date('9999-12-31');
                      return aDate - bDate;
                    })
                    .slice(0, 8)
                    .map((deal, index) => {
                    const badge = getDiscountBadge(deal);

                    return (
                      <div class="product-card relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl group" style="background-color: rgba(50, 50, 50, 0.1);" data-store-id={storeGroup.storeId}>
                    {/* Discount Name Banner */}
                    {deal.discountName && (
                      <div class="w-full py-3 px-3" style="background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%);">
                        <div class="text-white font-bold text-sm text-center uppercase">
                          {deal.discountName}
                        </div>
                      </div>
                    )}

                    {/* Product Image */}
                    <div class="relative h-40 bg-gradient-to-br from-gray-900 to-black overflow-hidden">
                      {deal.imageUrl ? (
                        <img
                          src={deal.imageUrl}
                          alt={deal.productName}
                          class="w-full h-full object-cover"
                          loading="lazy"
                          onError="this.closest('.product-card').style.display='none'"
                        />
                      ) : (
                        <div class="flex items-center justify-center w-full h-full">
                          <img
                            src="/favicon.png"
                            alt="Mint Logo"
                            class="w-24 h-24 object-contain opacity-50"
                          />
                        </div>
                      )}
                      {/* Overlay gradient */}
                      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                    </div>

                    {/* Product Info */}
                    <div class="p-2">
                      {/* Brand */}
                      {deal.brandName && (
                        <div class="mb-1">
                          <span class="text-[9px] font-semibold text-green-400 uppercase">
                            {deal.brandName}
                          </span>
                        </div>
                      )}

                      {/* Product Name */}
                      <h3 class="text-white font-bold text-xs mb-1 line-clamp-2 min-h-[2rem]">
                        {deal.productName}
                      </h3>

                      {/* Category Badge */}
                      {deal.category && (
                        <div class="mb-2">
                          <span class="inline-block px-1.5 py-0.5 text-[9px] font-medium text-yellow-400 bg-yellow-400/10 rounded">
                            {deal.category}
                          </span>
                        </div>
                      )}

                      {/* Price */}
                      {deal.unitPrice && (
                        <div class="flex items-center justify-center mb-2">
                          <div>
                            <span class="text-lg font-bold text-green-400">
                              ${deal.unitPrice.toFixed(2)}
                            </span>
                          </div>
                        </div>
                      )}

                      {/* Discount Details */}
                      {deal.validUntil && (
                        <div class="mb-2 p-1.5 bg-green-900/20 rounded">
                          <div class="text-[9px] text-yellow-400 text-center">
                            ‚è∞ Valid until {formatDate(deal.validUntil)}
                          </div>
                          {deal.quantityAvailable && deal.quantityAvailable < 10 && (
                            <div class="text-[9px] text-red-400 font-bold text-center mt-1">
                              üî• Only {deal.quantityAvailable} left in stock!
                            </div>
                          )}
                        </div>
                      )}

                      {/* Shop Now Link */}
                      <a
                        href="/stores"
                        class="block w-full text-center py-2 text-yellow-400 text-xs font-semibold hover:text-yellow-300 transition-colors"
                      >
                        Shop Now ‚Üí
                      </a>
                    </div>
                  </div>
                    );
                  })}
                </div>
                </div>
              </div>
            ))}

            <!-- Call to Action -->
            <div class="mt-16 bg-black rounded-lg p-8 text-center">
              <h2 class="text-2xl font-bold mb-4 text-white uppercase">
                Don't Miss Out on These Amazing Deals!
              </h2>
              <p class="text-green-300 mb-6 max-w-2xl mx-auto">
                Visit your nearest Mint Cannabis location to take advantage of these special offers. Limited time only!
              </p>
              <div class="flex flex-wrap justify-center gap-4">
                <a
                  href="/stores"
                  class="text-yellow-400 font-semibold hover:text-yellow-300 transition-colors"
                >
                  Find a Location ‚Üí
                </a>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Minimal script for deals page - geolocation removed for performance -->
  <script>
    console.log('üìç Deals page loaded - showing all stores');
  </script>
</Layout>
