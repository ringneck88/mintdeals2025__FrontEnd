---
// Simple Age Gate Component
// 18+ for Florida locations and dosing guide
// 21+ everywhere else
---

<!-- Inline script to prevent flash - runs immediately before page renders -->
<script is:inline>
  (function() {
    const isVerified = typeof localStorage !== 'undefined' && localStorage.getItem('ageVerified') === 'true';
    if (isVerified) {
      const style = document.createElement('style');
      style.textContent = '#ageGate { display: none !important; }';
      document.head.appendChild(style);
    }
  })();
</script>

<div id="ageGate" class="age-gate-overlay">
  <div class="age-gate-content">
    <!-- Logo -->
    <div class="logo-container">
      <img src="/favicon.png" alt="Mint Cannabis" class="logo" />
    </div>

    <!-- Age Question - dynamically updated -->
    <h1 id="ageQuestion" class="age-question">Are you 21 or older?</h1>

    <!-- Buttons -->
    <div class="button-group">
      <button id="yesButton" class="age-button yes-button">
        Yes
      </button>
      <button id="noButton" class="age-button no-button">
        No
      </button>
    </div>

    <!-- Error Message -->
    <div id="errorMessage" class="error-message hidden">
      Sorry, you must be of legal age to enter.
    </div>
  </div>
</div>

<script>
  function initAgeGate() {
    const ageGate = document.getElementById('ageGate');
    const ageQuestion = document.getElementById('ageQuestion');
    const errorMessage = document.getElementById('errorMessage');
    const yesButton = document.getElementById('yesButton');
    const noButton = document.getElementById('noButton');

    if (!ageGate) return;

    // Check if already verified
    if (localStorage.getItem('ageVerified') === 'true') {
      ageGate.style.display = 'none';
      return;
    }

    // Determine age requirement based on URL
    const currentPath = window.location.pathname.toLowerCase();

    // Check for Florida locations or dosing guide
    const isFloridaLocation = currentPath.includes('/location/') && (
      currentPath.includes('stuart') ||
      currentPath.includes('florida') ||
      currentPath.includes('-fl')
    );
    const isDosingGuide = currentPath.includes('dosing-guide') || currentPath.includes('dosing_guide');

    const ageRequired = (isFloridaLocation || isDosingGuide) ? 18 : 21;

    // Update the question text
    if (ageQuestion) {
      ageQuestion.textContent = `Are you ${ageRequired} or older?`;
    }

    // Show the age gate
    ageGate.style.display = 'flex';

    // Handle Yes button
    if (yesButton) {
      yesButton.addEventListener('click', () => {
        localStorage.setItem('ageVerified', 'true');
        ageGate.style.opacity = '0';
        setTimeout(() => {
          ageGate.style.display = 'none';
        }, 300);
      });
    }

    // Handle No button
    if (noButton) {
      noButton.addEventListener('click', () => {
        if (errorMessage) {
          errorMessage.classList.remove('hidden');
        }
        // Vibrate on mobile if available
        if ('vibrate' in navigator) {
          navigator.vibrate([100, 50, 100]);
        }
      });
    }
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAgeGate);
  } else {
    initAgeGate();
  }

  // Support for Astro View Transitions
  document.addEventListener('astro:page-load', initAgeGate);
</script>

<style>
  .age-gate-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 99999;
    transition: opacity 0.3s ease;
  }

  .age-gate-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .logo-container {
    margin-bottom: 2rem;
  }

  .logo {
    width: 120px;
    height: 120px;
    filter: drop-shadow(0 0 20px rgba(251, 191, 36, 0.6));
  }

  .age-question {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 2rem;
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }

  .age-button {
    padding: 1rem 3rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .yes-button {
    background: #10b981;
    color: #ffffff;
  }

  .yes-button:hover {
    background: #059669;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
  }

  .no-button {
    background: #374151;
    color: #ffffff;
  }

  .no-button:hover {
    background: #4b5563;
    transform: translateY(-2px);
  }

  .error-message {
    margin-top: 1.5rem;
    padding: 1rem 1.5rem;
    background: rgba(239, 68, 68, 0.9);
    border-radius: 8px;
    color: #ffffff;
    font-weight: 600;
    font-size: 1rem;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 480px) {
    .logo {
      width: 100px;
      height: 100px;
    }

    .age-question {
      font-size: 1.5rem;
      padding: 0 1rem;
    }

    .age-button {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }
  }
</style>
